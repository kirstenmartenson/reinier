{
  "servers": {
    "open": {
      "port": 8080
    },
    "secure": {
      "port": 8443,
      "options": {
        "key": "config/key.pem",
        "cert": "config/cert.pem"
      }
    },
    "auth": {
      "crypt": {
        "password" : "OVERRIDE"
      },
      "cache": {
        "ttl": 10800,
        "check": 360
      }
    }
  },
  "ldapauth": {
    "server": {
      "url": "OVERRIDE",
      "bindDn": "OVERRIDE",
      "bindCredentials": "OVERRIDE",
      "searchBase": "OVERRIDE",
      "searchFilter": "(uid={{username}})"
    }
  },
  "solos": {
    "resource": {
    },
    "security": {
      "groups": {
        "reinier admin": ".*",
        "reinier user": ["(GET|POST).*"]
      }
    }
  },
  "seneca": {
    "log": {
      "level": "info+"
    }
  }
}
